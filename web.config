<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Bật lại các MIME types cần thiết cho React -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".html" mimeType="text/html" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>

    <!-- URL Rewrite để chuyển tất cả request không phải file/thư mục về index.html -->
    <rewrite>
      <rules>
        <rule name="React Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Nếu request không phải file tồn tại -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Nếu request không phải thư mục tồn tại -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Nếu không phải đường dẫn API (bạn có thể sửa /api nếu có backend) -->
            <add input="{REQUEST_URI}" pattern="^/api" negate="true" />
          </conditions>
          <!-- Chuyển hướng về index.html để React xử lý routing -->
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- Cấu hình cache tĩnh -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>

  </system.webServer>
</configuration>
